{
  "name": "spine-viewer-vue",
  "version": "1.0.8fix",
  "main": "electron/backend.js",
  "private": true,
  "scripts": {
    "vite:dev": "vite",
    "vite:build": "vite build",
    "vite:preview": "vite preview",
    "electron:wait": "set IS_DEV=true && wait-on tcp:8192 && electron .",
    "electron:serve": "set IS_DEV=true && concurrently -k \"npm run vite:dev\" \"electron .\"",
    "electron:build": "electron-builder",
    "build": "npm run vite:build && npm run electron:build"
  },
  "dependencies": {
    "fs-extra": "^11.2.0",
    "pinia": "^2.1.7",
    "pixi-spine": "^3.1.2",
    "pixi.js": "^6.5.10",
    "vue": "^3.4.15",
    "vue-i18n": "^10.0.4"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.0.3",
    "concurrently": "^8.2.2",
    "electron": "^30.0.1",
    "electron-builder": "^24.13.3",
    "vite": "^5.0.11",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "spine.viewer",
    "copyright": "Jitsu",
    "productName": "Spine Viewer",
    "asar": false,
    "win": {
      "icon": "./src/assets/image/otogi.ico"
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "directories": {
      "buildResources": "resource",
      "output": "dist_electron"
    }
  }
}
